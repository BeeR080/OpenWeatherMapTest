<?xml version="1.0" encoding="utf-8"?>


    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
    android:layout_margin="8dp"
        android:layout_height="64dp"
        app:cardCornerRadius="4dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/mainfrag_tv_date"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="04.11.2023"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="24sp"

            />

       <LinearLayout
           android:layout_gravity="bottom"

           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           >

        <TextView
            android:id="@+id/mainfrag_tv_humidity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Влажность: 67%"

           style="@style/TextStyle"
            />

           <TextView
               android:id="@+id/mainfrag_tv_pressure"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Давление: 34hPa"


               style="@style/TextStyle"
               />
           <TextView
               android:id="@+id/mainfrag_tv_tmax"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="10"

               style="@style/TextStyle"

               />
           <TextView
               android:id="@+id/mainfrag_tv_tmin"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="5"

               style="@style/TextStyle"
               />
           <TextView
               android:id="@+id/mainfrag_tv_wind_speed"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="3 m/s"

               style="@style/TextStyle"
               />




       </LinearLayout>

    </androidx.cardview.widget.CardView>
