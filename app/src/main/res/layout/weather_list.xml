<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="64dp">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/mainfrag_tv_date"
            android:layout_gravity="top||center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="04.11.2023"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="24sp"

            />

       <LinearLayout
           android:layout_gravity="center||bottom"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           >

        <TextView
            android:id="@+id/mainfrag_tv_humidity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Влажность: 67%"
            android:layout_weight="1"
           style="@style/TextStyle"
            />

           <TextView
               android:id="@+id/mainfrag_tv_pressure"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Давление: 34hPa"
               android:layout_weight="1"

               style="@style/TextStyle"
               />
           <TextView
               android:id="@+id/mainfrag_tv_tmax"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="10"
               android:layout_weight="1"
               style="@style/TextStyle"

               />
           <TextView
               android:id="@+id/mainfrag_tv_tman"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="5"
               android:layout_weight="1"
               style="@style/TextStyle"
               />
           <TextView
               android:id="@+id/mainfrag_tv_wind_speed"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="3 m/s"
               android:layout_weight="1"
               style="@style/TextStyle"
               />




       </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>